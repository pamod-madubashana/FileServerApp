{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:default",
    "http:allow-fetch",
    "http:allow-fetch-send",
    "http:allow-fetch-read-body",
    "http:allow-fetch-cancel",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://localhost:*/*" },
        { "url": "http://127.0.0.1:*/*" },
        { "url": "http://*.*.*.*:*/*" },
        { "url": "https://*/*" }
      ]
    }
  ]
}