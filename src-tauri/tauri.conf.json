{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Telegram File Server",
  "version": "0.1.0",
  "identifier": "com.telegram.fileserver",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "url": "/",
        "title": "Telegram File Server",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "devtools": true
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": ["**"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"]
  },
  "plugins": {
    "http": {
      "scope": ["http://**", "https://**"]
    }
  }
}